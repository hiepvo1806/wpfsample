<Window x:Class="WpfHVApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Content="Open Second window and Page View" Click="OnSecondWindowButtonClicked" Grid.Column="0" Grid.Row="0"  />
        <Button Content="Open Model Binding Sample" Grid.Column="1" Grid.Row="0" Click="OnModelBindingSampleClicked" ></Button>
        <Button Content="Open Model Binding Sample 2" Grid.Column="1" Grid.Row="1" Click="OnModelBindingSample2Clicked" ></Button>
        <Button Content="Open Grid Binding" Grid.Column="0" Grid.Row="1" Click="OnGridBindingClicked" ></Button>
    </Grid>
</Window>
